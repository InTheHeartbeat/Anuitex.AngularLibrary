<!DOCTYPE html>
<html ng-app="libraryModule">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>   
<header class="header-bar" ng-controller="accountController">
    

    <div class="header-title">
        <h3>{{my.IsAuth}}</h3>
    </div>
    <div class="header-bar-menu-container">
        <ul id="header-bar-menu">
            <li ng-hide="IsAuth">
                <h3 ng-click="showSignInDialog()"><a href="#">Sign in</a>
                </h3>
            </li>
            <li ng-show="IsAuth">
                <h3>Hello, {{CurrentUser.Name}}!</h3>
            </li>
        </ul>
    </div>
</header>

    <div class="sidebar">
        <div class="sidebar-header">
            <span class="company">Anuitex</span>
            <div class="sub-header">
                <span class="title">Library</span>
            </div>
        </div>
        <div class="sidebar-items-container">
            <h4 class="label">Main</h4>
           

            <h5>All rights reserved. <br>Tyner©@DateTime.Now.Year</h5>
        </div>
    </div>

    <div class="body-content">       
        @RenderBody()        
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
